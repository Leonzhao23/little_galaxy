<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/subj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder_view_subject"
        />

    <EditText
        android:id="@+id/edit_subj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" >
        <requestFocus />
    </EditText>
    
    <TextView 
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder_view_desc"
        />

    <EditText
        android:id="@+id/edit_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" >
        <requestFocus />
    </EditText>
    
	<TextView 
        android:id="@+id/interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pref_head_interval"
        />
    <Spinner
        android:id="@+id/spinner_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pref_head_frequency"
        />
    <Spinner
        android:id="@+id/spinner_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/auto_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pref_head_start"
        />
    <Spinner
        android:id="@+id/spinner_auto_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />    

</LinearLayout>
